  <None Remove="assets\millwright\itemtypes\resource\sailangledcustom.json" />
  <None Remove="assets\millwright\itemtypes\resource\sailcenteredcustom.json" />
  <None Remove="assets\millwright\itemtypes\resource\sailwidecustom.json" />
